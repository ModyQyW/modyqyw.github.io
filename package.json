{
  "name": "modyqyw.github.io",
  "license": "MIT",
  "author": "ModyQyW",
  "scripts": {
    "build": "pnpm run build:github",
    "build:gitee": "cross-env MODE=gitee vuepress build docs",
    "build:github": "cross-env MODE=github vuepress build docs",
    "commit": "cz",
    "dev": "pnpm run dev:github",
    "dev:vitepress": "cross-env MODE=github vitepress dev docs",
    "dev:gitee": "cross-env MODE=gitee vuepress dev docs",
    "dev:github": "cross-env MODE=github vuepress dev docs",
    "lint": "run-p lint:eslint lint:markdownlint lint:stylelint",
    "lint:eslint": "eslint . --fix --ext=.js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue,.svelte --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:stylelint": "stylelint \"./**/*.{css,less,scss,sass,vue,svelte}\" --fix --allow-empty-input --ignore-path=.gitignore",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/prompt": "^17.1.2",
    "@modyqyw/fabric": "^5.10.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vuepress/client": "^2.0.0-beta.51",
    "@vuepress/plugin-docsearch": "^2.0.0-beta.51",
    "@vuepress/plugin-search": "^2.0.0-beta.51",
    "@vuepress/plugin-shiki": "^2.0.0-beta.51",
    "@vuepress/theme-default": "^2.0.0-beta.51",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": "^0.32.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "stylelint": "^14.13.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.6",
    "vitepress": "1.0.0-alpha.19",
    "vue": "^3.2.40",
    "vuepress": "^2.0.0-beta.51",
    "vuepress-plugin-copy-code2": "^2.0.0-beta.108",
    "vuepress-plugin-seo2": "^2.0.0-beta.108",
    "vuepress-plugin-sitemap2": "^2.0.0-beta.108"
  }
}
