  "scripts": {
    "build": "vitepress build docs",
    "check:deps": "taze -f",
    "commit": "git-cz",
    "dev": "vitepress dev docs",
    "lint": "conc \"pnpm:lint:eslint\" \"pnpm:lint:markdownlint\" \"pnpm:lint:stylelint\"",
    "lint:eslint": "eslint . --fix --cache --no-error-on-unmatched-pattern --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:stylelint": "stylelint \"./**/*.{css,scss,vue}\" --fix --cache --allow-empty-input --ignore-path=.gitignore",
    "prepare": "is-ci || simple-git-hooks",
    "preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/prompt": "^17.6.6",
    "@modyqyw/fabric": "^8.3.3",
    "@types/detect-node": "^2.0.0",
    "@types/fabric": "^5.3.3",
    "@types/shelljs": "^0.8.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.9",
    "detect-node": "^2.1.0",
    "eslint": "^8.45.0",
    "fabric": "^5.3.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.3",
    "markdownlint-cli": "^0.35.0",
    "prettier": "^2.8.8",
    "shelljs": "^0.8.5",
    "simple-git-hooks": "^2.8.1",
    "sitemap": "^7.1.1",
    "stylelint": "^15.10.1",
    "taze": "^0.11.2",
    "typescript": "^5.1.6",
    "unocss": "^0.52.7",
    "viewerjs": "^1.11.3",
    "vite": "^4.4.4",
    "vitepress": "1.0.0-beta.5",
    "vitepress-plugin-comment-with-giscus": "^1.1.7",
    "vitepress-plugin-image-viewer": "^1.1.2",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.5"
  },
  "packageManager": "pnpm@8.6.7",
  "engines": {
    "node": "18"
  }
