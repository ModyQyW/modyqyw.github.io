{
  "name": "modyqyw.github.io",
  "license": "MIT",
  "author": "ModyQyW",
  "scripts": {
    "build": "pnpm run build:github",
    "build:gitee": "cross-env MODE=gitee vuepress build docs",
    "build:github": "cross-env MODE=github vuepress build docs",
    "commit": "git-cz",
    "dev": "pnpm run dev:github",
    "dev:gitee": "cross-env MODE=gitee vuepress dev docs",
    "dev:github": "cross-env MODE=github vuepress dev docs",
    "lint": "pnpm run lint:eslint && pnpm run lint:markdownlint && pnpm run lint:stylelint",
    "lint:eslint": "eslint . --fix --ext=.js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue,.svelte --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:stylelint": "stylelint \"./**/*.{css,less,scss,sass,vue,svelte}\" --fix --allow-empty-input --ignore-path=.gitignore",
    "prepare": "is-ci || husky install"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/prompt": "^16.2.1",
    "@modyqyw/fabric": "^4.13.1",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vuepress/plugin-docsearch": "^2.0.0-beta.35",
    "@vuepress/plugin-pwa": "^2.0.0-beta.35",
    "@vuepress/plugin-pwa-popup": "^2.0.0-beta.35",
    "@vuepress/plugin-search": "^2.0.0-beta.35",
    "@vuepress/plugin-shiki": "^2.0.0-beta.35",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "lint-staged": "^12.3.4",
    "markdownlint-cli": "^0.31.1",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.3",
    "typescript": "^4.5.5",
    "vue": "^3.2.31",
    "vuepress": "^2.0.0-beta.35",
    "vuepress-plugin-copy-code2": "^2.0.0-alpha.33",
    "vuepress-plugin-seo2": "^2.0.0-alpha.33",
    "vuepress-plugin-sitemap2": "^2.0.0-alpha.33"
  }
}
