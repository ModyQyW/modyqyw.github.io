{
  "name": "modyqyw.github.io",
  "license": "MIT",
  "author": "ModyQyW",
  "scripts": {
    "commit": "cz",
    "gitee:build": "cross-env MODE=gitee vuepress build docs",
    "gitee:dev": "cross-env MODE=gitee vuepress dev docs",
    "github:build": "cross-env MODE=github vuepress build docs",
    "github:dev": "cross-env MODE=github vuepress dev docs",
    "lint": "pnpm run lint:eslint && pnpm run lint:markdownlint",
    "lint:eslint": "eslint . --fix --ext=.js,.jsx,.ts,.tsx,.vue --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "prepare": "is-ci || husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "~7.16.0",
    "@babel/eslint-parser": "~7.16.3",
    "@commitlint/cli": "~14.1.0",
    "@modyqyw/fabric": "~4.0.0-15",
    "@snippetors/vuepress-plugin-code-copy": "~1.1.0",
    "@typescript-eslint/eslint-plugin": "~5.3.1",
    "@typescript-eslint/parser": "~5.3.1",
    "@vuepress/plugin-debug": "~2.0.0-beta.27",
    "@vuepress/plugin-pwa": "~2.0.0-beta.27",
    "@vuepress/plugin-pwa-popup": "~2.0.0-beta.27",
    "@vuepress/plugin-search": "~2.0.0-beta.27",
    "@vuepress/plugin-shiki": "~2.0.0-beta.27",
    "cross-env": "~7.0.3",
    "eslint": "~7.32.0",
    "husky": "~7.0.4",
    "is-ci": "~3.0.1",
    "lint-staged": "~11.2.6",
    "markdownlint-cli": "~0.29.0",
    "prettier": "~2.4.1",
    "typescript": "~4.4.4",
    "vuepress": "~2.0.0-beta.27",
    "vuepress-plugin-sitemap2": "~2.0.0-alpha.7"
  }
}
