{
  "name": "modyqyw.github.io",
  "license": "MIT",
  "author": "ModyQyW",
  "scripts": {
    "build": "pnpm run build:github",
    "build:gitee": "cross-env MODE=gitee vuepress build docs",
    "build:github": "cross-env MODE=github vuepress build docs",
    "commit": "cz",
    "dev": "pnpm run dev:github",
    "dev:gitee": "cross-env MODE=gitee vuepress dev docs",
    "dev:github": "cross-env MODE=github vuepress dev docs",
    "lint": "pnpm run lint:eslint && pnpm run lint:markdownlint",
    "lint:eslint": "eslint . --fix --ext=.js,.jsx,.ts,.tsx,.vue --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "prepare": "is-ci || husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "vue": "~3.2.26"
  },
  "devDependencies": {
    "@babel/core": "~7.16.5",
    "@babel/eslint-parser": "~7.16.5",
    "@commitlint/cli": "~15.0.0",
    "@modyqyw/fabric": "~4.3.0",
    "@typescript-eslint/eslint-plugin": "~5.7.0",
    "@typescript-eslint/parser": "~5.7.0",
    "@vuepress/plugin-debug": "~2.0.0-beta.29",
    "@vuepress/plugin-pwa": "~2.0.0-beta.29",
    "@vuepress/plugin-pwa-popup": "~2.0.0-beta.29",
    "@vuepress/plugin-search": "~2.0.0-beta.29",
    "@vuepress/plugin-shiki": "~2.0.0-beta.29",
    "cross-env": "~7.0.3",
    "eslint": "~8.5.0",
    "husky": "~7.0.4",
    "is-ci": "~3.0.1",
    "lint-staged": "~12.1.3",
    "markdownlint-cli": "~0.30.0",
    "prettier": "~2.5.1",
    "typescript": "~4.5.4",
    "vuepress-plugin-copy-code2": "~2.0.0-alpha.7",
    "vuepress-plugin-seo2": "~2.0.0-alpha.7",
    "vuepress-plugin-sitemap2": "~2.0.0-alpha.7",
    "vuepress-vite": "~2.0.0-beta.29"
  }
}
