{
  "name": "modyqyw.github.io",
  "license": "MIT",
  "author": "ModyQyW",
  "scripts": {
    "build": "pnpm run build:github",
    "build:gitee": "cross-env MODE=gitee vuepress build docs",
    "build:github": "cross-env MODE=github vuepress build docs",
    "commit": "git-cz",
    "dev": "pnpm run dev:github",
    "dev:gitee": "cross-env MODE=gitee vuepress dev docs",
    "dev:github": "cross-env MODE=github vuepress dev docs",
    "lint": "pnpm run lint:eslint && pnpm run lint:markdownlint && pnpm run lint:stylelint",
    "lint:eslint": "eslint . --fix --ext=.js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue,.svelte,.yaml,.yml,.json,.jsonc,.json5 --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:stylelint": "stylelint \"./**/*.{css,less,scss,sass,vue,svelte}\" --fix --allow-empty-input --ignore-path=.gitignore",
    "prepare": "is-ci || husky install"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/eslint-parser": "^7.17.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/prompt": "^17.0.0",
    "@modyqyw/fabric": "^5.0.14",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@vuepress/client": "2.0.0-beta.45",
    "@vuepress/plugin-docsearch": "^2.0.0-beta.45",
    "@vuepress/plugin-search": "^2.0.0-beta.45",
    "@vuepress/plugin-shiki": "^2.0.0-beta.45",
    "@vuepress/theme-default": "^2.0.0-beta.45",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.0",
    "markdownlint-cli": "^0.31.1",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.3",
    "typescript": "^4.6.4",
    "vue": "^3.2.36",
    "vuepress": "^2.0.0-beta.45",
    "vuepress-plugin-copy-code2": "^2.0.0-beta.61",
    "vuepress-plugin-seo2": "^2.0.0-beta.61",
    "vuepress-plugin-sitemap2": "^2.0.0-beta.61"
  }
}
