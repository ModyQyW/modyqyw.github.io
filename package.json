{
  "name": "modyqyw.github.io",
  "license": "MIT",
  "author": "ModyQyW",
  "type": "module",
  "files": [
    "docs/.vitepress/dist"
  ],
  "scripts": {
    "build": "vitepress build docs",
    "depcheck": "depcheck",
    "depupdate": "taze -fw",
    "dev": "vitepress dev docs",
    "lint": "conc \"pnpm:lint:script\" \"pnpm:lint:stylelint\" \"pnpm:lint:markdownlint\"",
    "lint:eslint": "eslint . --fix --cache",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:oxlint": "oxlint --deny=correctness --deny=perf",
    "lint:script": "nr lint:oxlint && nr lint:eslint",
    "lint:stylelint": "stylelint \"./**/*.{css,scss,vue}\" --fix --cache --aei --ignore-path=.gitignore",
    "prepare": "is-ci || simple-git-hooks",
    "preview": "vitepress preview docs",
    "typecheck": "vue-tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/types": "^18.6.0",
    "@modyqyw/fabric": "^10.2.3",
    "@types/detect-node": "^2.0.2",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@unocss/core": "^0.58.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "depcheck": "^1.4.7",
    "detect-node": "^2.1.0",
    "eslint": "^8.56.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.1",
    "markdownlint-cli": "^0.39.0",
    "oxlint": "^0.2.6",
    "prettier": "^3.2.4",
    "shelljs": "^0.8.5",
    "simple-git": "^3.22.0",
    "simple-git-hooks": "^2.9.0",
    "sitemap": "^7.1.1",
    "stylelint": "^16.2.1",
    "taze": "^0.13.2",
    "typescript": "^5.3.3",
    "unocss": "^0.58.4",
    "viewerjs": "^1.11.6",
    "vite": "^5.0.12",
    "vitepress": "1.0.0-rc.41",
    "vitepress-plugin-comment-with-giscus": "^1.1.12",
    "vitepress-plugin-image-viewer": "^1.1.3",
    "vue": "^3.4.15",
    "vue-tsc": "^1.8.27"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": "20"
  },
  "pnpm": {
    "overrides": {
      "array-includes": "npm:@nolyfill/array-includes@latest",
      "array.prototype.findlastindex": "npm:@nolyfill/array.prototype.findlastindex@latest",
      "array.prototype.flat": "npm:@nolyfill/array.prototype.flat@latest",
      "array.prototype.flatmap": "npm:@nolyfill/array.prototype.flatmap@latest",
      "array.prototype.tosorted": "npm:@nolyfill/array.prototype.tosorted@latest",
      "es-iterator-helpers": "npm:@nolyfill/es-iterator-helpers@latest",
      "hasown": "npm:@nolyfill/hasown@latest",
      "object.assign": "npm:@nolyfill/object.assign@latest",
      "object.entries": "npm:@nolyfill/object.entries@latest",
      "object.fromentries": "npm:@nolyfill/object.fromentries@latest",
      "object.groupby": "npm:@nolyfill/object.groupby@latest",
      "object.hasown": "npm:@nolyfill/object.hasown@latest",
      "object.values": "npm:@nolyfill/object.values@latest",
      "string.prototype.matchall": "npm:@nolyfill/string.prototype.matchall@latest"
    }
  }
}
