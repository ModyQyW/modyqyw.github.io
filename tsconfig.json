{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "lib": ["DOM", "ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "baseUrl": "."
  },
  "include": [
    "./**/.*.js",
    "./**/.*.cjs",
    "./**/.*.mjs",
    "./**/*.js",
    "./**/*.cjs",
    "./**/*.mjs",
    "./**/*.jsx",
    "./**/.*.ts",
    "./**/.*.cts",
    "./**/.*.mts",
    "./**/*.ts",
    "./**/*.cts",
    "./**/*.mts",
    "./**/*.tsx",
    "./**/*.vue"
  ],
  "exclude": ["node_modules", "dist", "dist-ssr", "dist_electron", "out", "unpackage"]
}
