{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "docs/.vitepress/**/*.js",
    "docs/.vitepress/**/*.jsx",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.tsx",
    "docs/.vitepress/**/*.vue",
  ],
  "exclude": [
    "**/.cache",
    "**/.temp",
    "**/.tmp",
    "**/cache",
    "**/temp",
    "**/tmp",
    "**/dist",
    "**/node_modules",
  ],
}
